<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:age, "Age") %>
  <%= text_field_tag(:age, nil, placeholder: @placeholder_age) %>

  <%= label_tag(:grade_level, "Grade level") %>
  <%= text_field_tag(:grade_level, nil, placeholder: @placeholder_grade) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create Student") %>
<% end %>